.demo-ribbon {
  width: 100%;
  height: 40vh;
  background-color: #3F51B5;
  -webkit-flex-shrink: 0;
      -ms-flex-negative: 0;
          flex-shrink: 0;
}

.demo-main {
  margin-top: -40vh;
  -webkit-flex-shrink: 0;
      -ms-flex-negative: 0;
          flex-shrink: 0;
}

.demo-container {
  max-width: 1200px;
  width: calc(100% - 40px);
  margin: 0 auto;
}

.demo-content {
  border-radius: 20px;
  padding: 80px 56px;
  margin-bottom: 40px;
}

.demo-layout.is-small-screen .demo-content {
  padding: 40px 28px;
}

.demo-content h3 {
  margin-top: 48px;
}

.demo-footer {
  padding-left: 40px;
}

.demo-footer .mdl-mini-footer--link-list a {
  font-size: 13px;
}

.demo-header .mdl-layout__header-row {
  padding-left: 40px;
}

/* MDL Cards */
              .demo-card-contact.mdl-card {
                 width: 300px;
                 height: 300px;
                 padding: 5px;
              }
              .demo-card-contact > .mdl-card__title {
                color: #fff;
                background: url('images/contact.png');
              }
              .demo-card-controls.mdl-card {
                 width: 300px;
                 height: 400px;
                 padding: 5px;
              }
              .demo-card-controls > .mdl-card__title {
                color: #0;
                background: url('images/controls.png');
              }
              .demo-card-settings.mdl-card {
                 width: 300px;
                 height: 400px;
                 padding: 5px;
              }
              .demo-card-settings > .mdl-card__title {
                color: #0;
                background: url('images/settings.png');
              }
              .demo-cards {
                -webkit-box-align: start;
                -webkit-align-items: flex-start;
                    -ms-flex-align: start;
                        align-items: flex-start;
                -webkit-align-content: flex-start;
                    -ms-flex-line-pack: start;
                        align-content: flex-start;
              }
              .demo-cards .demo-separator {
                height: 32px;
              }
              



